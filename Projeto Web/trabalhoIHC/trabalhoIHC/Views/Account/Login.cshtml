@using System.Web.UI.WebControls
@{
    Layout = "~/Views/Shared/_LayoutLimpo.cshtml";

}
@Styles.Render("~/Content/styleLogin.css")

<div class="container col-md-6 col-md-offset-3">
    <div class="row">
        <div class="container">
            <div class="card"></div>
            <div class="card">
                <h1 class="title">Acesso ao Portal</h1>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="input-container">
                        <input type="text" id="Username" name="Username" required="required" />
                        <label for="Username">Login</label>
                        <div class="bar"></div>
                    </div>
                    <div class="input-container">
                        <input type="password" id="Password" name="Password" required="required" />
                        <label for="Password">Senha</label>
                        <div class="bar"></div>
                    </div>
                    <div class="button-container">
                        <button><span class="glyphicon glyphicon-log-in"></span></button>
                    </div>
                    <div class="footer">
                        <a href="@Url.Content("http://www.uniron.edu.br/portais/usuarioportal/")">Esqueceu a senha?</a>
                    </div>
                }
            </div>
            <div class="card alt">
                <div class="toggle">
                    <span id="icon" class="glyphicon glyphicon-exclamation-sign"></span>
                </div>
                <h1 class="title">
                    Info
                    <div class="close"></div>
                </h1>
                <div class="footer input-container" style="text-align: justify">
                    <div class="container">
                        <p>Nova plataforma de autenticação dos portais da Uniron, sim dos portais!</p>
                        <hr />
                        <p>Não haverá portais diferentes para acessos diferentes, agora está tudo integrado!</p>
                        <hr />
                        <p>Desenvolvido pelos alunnos do 7º Período!</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Portfolio--><a id="portfolio" href="@Url.Content("http://www2.uniron.edu.br/wp-core/")" title="Go To Home!"><i class="glyphicon glyphicon-home"></i></a>
    </div>
</div>
@section scripts{
    @*@Styles.Render("~/Content/styleLogin.css")*@
    <script>
        $(document).ready(function () {
            $('.toggle').on('click', function () {
                $('.container').stop().addClass('active');
                $('#icon').stop().removeClass('glyphicon-exclamation-sign');
            });

            $('.close').on('click', function () {
                $('.container').stop().removeClass('active');
                $('#icon').stop().addClass('glyphicon-exclamation-sign');
            });
        });
    </script>
}
