@model trabalhoIHC.Models.Livro



<div class="hidden-xs hidden-sm">
    @using (Ajax.BeginForm("BookSearchResult", "Library", null, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "BuscarBibliotecaPostItemOk", OnFailure = "BuscarBibliotecaPostItemFalhou", UpdateTargetId = "requisicao", InsertionMode = InsertionMode.Replace }))
    {
        <fieldset>
            <legend class="text-center">Busca de Livros</legend>
            <center>
                <div class="row">
                    <div class="form-group">
                        <label class="control-label" for="txtTitulo"></label>
                        <input id="txtTitulo" name="Titulo" placeholder="Título" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="control-label" for="txtAutor"></label>
                        <input id="txtAutor" name="Autor" placeholder="Autor" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="control-label" for="txtEditora"></label>
                        <input id="txtEditora" name="Editora" placeholder="Editora" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="control-label" for="txtDataPublicacao"></label>
                        <input id="txtDataPublicacao" name="DataPublicacao" placeholder="Data de Publicação" class="form-control input-md" type="text">
                    </div>
                </div>
                    <div class="btn-group">
                        <button type="submit" class="btn btn-default">Buscar</button>
                    </div>
            </center>
        </fieldset>
    }
</div>

<div class="hidden-lg hidden-md">
    @using (Ajax.BeginForm("BookSearchResult", "Library", null, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "BuscarBibliotecaPostOk", OnFailure = "BuscarBibliotecaPostFalhou", UpdateTargetId = "requisicaoMobile", InsertionMode = InsertionMode.Replace }))
    {
        <fieldset>
            <legend class="text-center">Busca de Livros</legend>
            <div class="col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label" for="txtTitulo"></label>
                        <input id="txtTituloMobile" name="Titulo" placeholder="Título" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label" for="txtAutor"></label>
                        <input id="txtAutor" name="Autor" placeholder="Autor" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label" for="txtEditora"></label>
                        <input id="txtEditora" name="Editora" placeholder="Editora" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label" for="txtDataPublicacao"></label>
                        <input id="txtDataPublicacao" name="DataPublicacao" placeholder="Data de Publicação" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="form-group text-center">
                    <label class="col-md-4 control-label" for="btnBusca"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-default">Buscar</button>
                    </div>
                </div>
            </div>
        </fieldset>
    }
</div>