<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/toastr")
    @Styles.Render("~/Content/styleInfoUser.css")
    @Styles.Render("~/Content/telaPrincipal.css")
    @Styles.Render("~/Content/styleBody.css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/calendar.css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background: #e9e9e9;
            color: #666666;
            font-family: 'RobotoDraft', 'Roboto', sans-serif;
            font-size: 14px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            overflow: scroll;
        }
    </style>
</head>
<body>
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/Scripts/calendar.js")
    @Html.Partial("_Toastr")
    @RenderSection("scripts", required: false)
</body>
</html>
